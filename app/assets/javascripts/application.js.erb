$(document).on('page:load', function(){

  $("#M1").click(function(){selectGroup("M1");});
  $("#M2").click(function(){selectGroup("M2");});
  $("#M3").click(function(){selectGroup("M3");});
  $("#M4").click(function(){selectGroup("M4");});
  $("#M5").click(function(){selectGroup("M5");});
  $("#M6").click(function(){selectGroup("M6");});
  $("#V1").click(function(){selectGroup("V1");});
  $("#V2").click(function(){selectGroup("V2");});
  $("#V3").click(function(){selectGroup("V3");});
  $("#V4").click(function(){selectGroup("V4");});
  $("#V5").click(function(){selectGroup("V5");});
  $("#V6").click(function(){selectGroup("V6");});
  $("#E").click(function(){selectGroup("E");});

});

function selectGroup(id){

  $('.admited').slideUp(300);

  setTimeout(function(){

    switch (id) {

      /* Turno Matutino */

      case "M1":
        $('.4').slideDown(300);
        break;
      case "M2":
        $('.5').slideDown(300);
        break;
      case "M3":
        $('.8').slideDown(300);
        break;
      case "M4":
        $('.2').slideDown(300);
        break;
      case "M5":
        $('.3').slideDown(300);
        break;
      case "M6":
        $('.6').slideDown(300);
        break;

      /*Turno vespertino*/

      case "V1":
        chart = ".16";
        $(chart).slideDown(300);
        break;
      case "V2":
        chart = ".17";
        $(chart).slideDown(300);
        break;
      case "V3":
        chart = ".22";
        $(chart).slideDown(300);
        break;
      case "V4":
        chart = ".14";
        $(chart).slideDown(300);
        break;
      case "V5":
        chart = ".15";
        $(chart).slideDown(300);
        break;
      case "V6":
        chart = ".18";
        $(chart).slideDown(300);
        break;

      case "E":
        $('.error').slideDown(300);

    }
  }, 300);


  $('.groupsList').animate({'right': '100%'});
  $('.groupsList .button').animate({'right': '100%'});

}
