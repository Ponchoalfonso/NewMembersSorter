<div>
  <% if user_signed_in? %>
    <%= render 'header' %>
    <div class="body">
      <aside class="sideBar">
        <div class="subtitle baseBox">
          <span class="icon-book baseBox"></span>
          <div>
            <h2>Acciones</h2>
          </div>
        </div>
        <div class="actions">
          <% if Group.all.length < 1 %>
          <span class="button baseBox" id="import">
            <span class="icon-folder-upload"></span>
            <h3>Importar</h3>
          </span>
          <%= render 'importAction' %>
          <a href="requests/new" class="button baseBox">
            <span class="icon-plus"></span>
            <h3>Nuevo</h3>
          </a>
          <% else %>
          <a href="/requests.xls" class="button baseBox">
            <span class="icon-folder-download"></span>
            <h3>Exportar solicitudes</h3>
          </a>
          <% end %>
          <span class="baseBox find">
          <%= form_tag requests_path, :method => 'get' do %>
            <p>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Buscar", :name => nil, :class => "submitBtn" %>
            </p>
          <% end %>
          </span>
        </div>
      </aside>
      <section class="content">
        <div>
          <div class="subtitle baseBox">
            <span class="icon-address-book baseBox"></span>
            <div>
              <h2>Solicitudes actuales</h2>
              <p>Listando alumnos solicitantes.</p>
            </div>
          </div>
          <div class="info infoExtra">
            <p>
              Número de regisros actuales: <%= Request.all.length %><br>
            </p>
          </div>
          <div class="info">
            <table>
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Nombre</th>
                  <th>Promedio Secundaria</th>
                  <th>Examen de admisión</th>
                  <th>Foráneo</th>
                  <th>Especialidad</th>
                  <th>Especialidad Secundaria</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @requests.each do |request| %>
                  <tr>
                    <td><%= request.id %></td>
                    <td><%= request.name %></td>
                    <td><%= request.schoolAverage %></td>
                    <td><%= request.examMark %></td>
                    <td><%= request.isForeign %></td>
                    <td><%= request.speciality %></td>
                    <td><%= request.secondSpeciality %></td>
                    <% if Group.all.length < 1 %>
                    <td><%= link_to 'Show', request %></td>
                    <td><%= link_to 'Edit', edit_request_path(request) %></td>
                    <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </section>
    </div>
  <% else %>
    <%= render 'noSesion' %>
  <% end %>
</div>
