    <%= f.label :Foraneo %><br>
    <%= f.check_box :isForeign %>
  </div>
  <div class="field">
    <%= f.label :Especialidad %><br>
    <%= f.number_field :speciality %>
  </div>
  <div class="field">
    <%= f.label "Escpecialidad secundaria" %><br>
